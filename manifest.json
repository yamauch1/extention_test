{
  "manifest_version": 3,
  "name": "My First Edge Extension",
  "version": "1.0",
  "description": "A simple popup extension for Edge",
  "permissions": ["nativeMessaging"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
